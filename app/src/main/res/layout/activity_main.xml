<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bDownloadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download" />
    <Button
        android:id="@+id/bUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_below="@id/bDownloadImage"/>
    <Button
        android:id="@+id/bDownload2sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download for 3 sec"
        android:layout_below="@id/bUploadImage"/>

    <Button
        android:id="@+id/bUpload2sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload for 3 sec"
        android:layout_below="@id/bDownload2sec"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_below="@id/bUpload2sec"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Speed:"
        android:layout_below="@id/toggleButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downloadSpeed"
        android:layout_below="@id/tDownload"/>

    <TextView
        android:id="@+id/tUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Speed:"
        android:layout_below="@id/downloadSpeed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadSpeed"
        android:layout_below="@id/tUpload"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tlatitude"
        android:text="Latitude:"
        android:layout_below="@id/uploadSpeed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitude"
        android:layout_below="@id/tlatitude"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tlongitude"
        android:text="Longitude:"
        android:layout_below="@id/latitude"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:layout_below="@id/tlongitude"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_height = "wrap_content"
        android:layout_width = "match_parent"
        android:layout_alignParentBottom = "true"
        android:minHeight="20dip"
        android:maxHeight="20dip"
        style="@android:style/Widget.ProgressBar.Horizontal" />



</RelativeLayout>
